@using System.Data;
@using MPA_Jukebox_Playlist.MPA_Jukebox_Playlist.Models.Database;
@{

    List<Songs> songs = ViewBag.Songs;
;


    int cnt = 0;
    foreach (var item in songs)
    {
        int cntr = (int)item.Duration;

        cnt = cnt + cntr;

    }

}

<div>
        <a asp-area="" asp-controller="Home" asp-action="Playlists">Back</a><br />

        <p>Total Duration: @cnt min</p><br />
    @foreach (var item in songs)
    {
        <div style="padding: 20px;margin: 0 auto; display: inline-block; border: 1px; border-style: solid;">
            <h1>@item.Title</h1>
            <p>Artist: @item.Artist</p>
            <p>@item.Duration min</p>
            <a asp-area="" asp-controller="Playlist" asp-action="DeleteSongPlaylist" asp-route-id="@item.ID">Delete</a>
        </div>
    } 
</div>